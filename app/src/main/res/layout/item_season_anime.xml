<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView android:id="@+id/season"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:layout_marginStart="@dimen/anime_spacing"
        android:layout_marginEnd="@dimen/anime_spacing"
        android:layout_marginBottom="@dimen/anime_spacing"
        app:cardBackgroundColor="?attr/backgroundPrimaryColor"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/anime_spacing">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView android:id="@+id/tv_season_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/anime_spacing"
                            android:text="@string/seasonNumber"
                            android:textColor="?attr/textPrimaryColor"
                            android:textSize="@dimen/font_size_large"
                            android:textStyle="bold"/>

                        <TextView android:id="@+id/tv_season_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/textSecondaryColor"
                            tools:text="Title"/>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <ImageView android:id="@+id/iv_season_is_showing_episodes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_arrow_drop_down_24dp"
                            app:tint="?attr/textSecondaryColor"
                            tools:ignore="ContentDescription" />

                        <ProgressBar android:id="@+id/pb_season_is_loading_episodes"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:indeterminateTint="?attr/textSecondaryColor"/>

                    </RelativeLayout>

                </LinearLayout>

                <TextView android:id="@+id/tv_season_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/anime_spacing"
                    android:text="## / ##"
                    android:textColor="?attr/textSecondaryColor"
                    tools:ignore="HardcodedText" />

                <CheckBox android:id="@+id/cb_season_is_watch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ProgressBar android:id="@+id/pb_season_progress"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:progressDrawable="@drawable/progress_bar_drawable"
                tools:progress="80"
                style="@android:style/Widget.ProgressBar.Horizontal"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>