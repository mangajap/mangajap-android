<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView android:id="@+id/episode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:layout_marginStart="@dimen/anime_spacing"
        android:layout_marginEnd="@dimen/anime_spacing"
        android:layout_marginBottom="@dimen/anime_spacing"
        app:cardBackgroundColor="?attr/backgroundPrimaryColor"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView android:id="@+id/episodeNumber_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/anime_spacing"
                android:padding="@dimen/anime_spacing"
                android:text="##"
                android:textColor="?attr/textPrimaryColor"
                android:textSize="@dimen/font_size_medium"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/anime_spacing">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView android:id="@+id/txEpisodeNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="?attr/textPrimaryColor"
                        android:textSize="@dimen/font_size_large"
                        android:textStyle="bold"
                        tools:text="S## | E## (E###)" />

                    <TextView android:id="@+id/episodeTitle_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginTop="2dp"
                        android:text="Episode title"
                        android:textColor="?attr/textPrimaryColor"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <CheckBox android:id="@+id/episodeIsWatch_CheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/anime_spacing"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>