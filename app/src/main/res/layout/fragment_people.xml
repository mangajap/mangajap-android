<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundSecondaryColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/view_toolbar"/>

            <com.google.android.material.tabs.TabLayout android:id="@+id/people_TabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.AppTheme.TabLayout" />

        </com.google.android.material.appbar.AppBarLayout>

        <FrameLayout android:id="@+id/people_FrameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants"/>

    </LinearLayout>

    <include android:id="@+id/is_loading"
        layout="@layout/layout_is_loading"/>

</RelativeLayout>
