<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clipToPadding="false"
    app:cardBackgroundColor="?attr/backgroundPrimaryColor"
    app:cardCornerRadius="3dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_people_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/people_spacing"
            android:layout_marginTop="@dimen/people_spacing"
            android:layout_marginEnd="@dimen/people_spacing"
            android:gravity="center_horizontal"
            android:padding="6dp"
            android:textColor="?attr/textPrimaryColor"
            android:textSize="@dimen/font_size_medium"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Name" />

        <ImageView
            android:id="@+id/iv_people_1_staff_cover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/people_spacing"
            android:layout_marginTop="@dimen/people_spacing"
            android:layout_marginBottom="@dimen/people_spacing"
            android:background="?attr/backgroundSecondaryColor"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/tv_people_see_all_staff"
            app:layout_constraintDimensionRatio="@string/media_ratio"
            app:layout_constraintEnd_toStartOf="@id/iv_people_2_staff_cover"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_people_name"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/iv_people_2_staff_cover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/people_spacing"
            android:layout_marginTop="@dimen/people_spacing"
            android:layout_marginEnd="@dimen/people_spacing"
            android:layout_marginBottom="@dimen/people_spacing"
            android:background="?attr/backgroundSecondaryColor"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/tv_people_see_all_staff"
            app:layout_constraintDimensionRatio="@string/media_ratio"
            app:layout_constraintEnd_toStartOf="@id/iv_people_3_staff_cover"
            app:layout_constraintStart_toEndOf="@id/iv_people_1_staff_cover"
            app:layout_constraintTop_toBottomOf="@id/tv_people_name"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/iv_people_3_staff_cover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/people_spacing"
            android:layout_marginEnd="@dimen/people_spacing"
            android:layout_marginBottom="@dimen/people_spacing"
            android:background="?attr/backgroundSecondaryColor"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/tv_people_see_all_staff"
            app:layout_constraintDimensionRatio="@string/media_ratio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_people_2_staff_cover"
            app:layout_constraintTop_toBottomOf="@id/tv_people_name"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_people_see_all_staff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/people_spacing"
            android:layout_marginEnd="@dimen/people_spacing"
            android:layout_marginBottom="@dimen/people_spacing"
            android:gravity="center"
            android:padding="6dp"
            android:text="@string/seeAll"
            android:textColor="?attr/colorAccent"
            android:textSize="@dimen/font_size_medium"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>