<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundSecondaryColor"
    android:orientation="vertical">

    <include layout="@layout/view_app_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:id="@+id/anyBooks_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/myBooks_spacing"
            android:gravity="center"
            android:text="@string/anyEBooksIn"
            android:textColor="?attr/textSecondaryColor"
            tools:ignore="RelativeOverlap" />


        <androidx.recyclerview.widget.RecyclerView android:id="@+id/myBooks_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:clipToPadding="false"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" />

        <androidx.cardview.widget.CardView android:id="@+id/change_item_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/myBooks_spacing"
            app:cardCornerRadius="2dp"
            app:cardBackgroundColor="?attr/textPrimaryColor"
            app:cardElevation="0dp">

            <ImageView android:id="@+id/iv_change_item_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:src="@drawable/ic_view_stream_black_24dp"
                app:tint="?attr/backgroundPrimaryColor"
                tools:ignore="ContentDescription" />

        </androidx.cardview.widget.CardView>

        <View android:id="@+id/shadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#66000000"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:padding="16dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton android:id="@+id/fab_directory_saved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_list_black_24dp"
                android:tint="#ffffff"
                android:visibility="visible"
                app:fabSize="mini" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton android:id="@+id/fab_external_storage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_sd_storage_black_24dp"
                android:tint="#ffffff"
                android:visibility="visible"
                app:fabSize="mini" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton android:id="@+id/fab_internal_storage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_phone_android_black_24dp"
                android:tint="#ffffff"
                android:visibility="visible"
                app:fabSize="mini"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton android:id="@+id/fab_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_add_black_24dp"
                android:tint="#ffffff"
                android:visibility="visible"
                app:fabSize="normal" />

        </LinearLayout>

        <include android:id="@+id/is_loading"
            layout="@layout/layout_is_loading"/>

    </RelativeLayout>

</LinearLayout>

