<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/manga"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/agenda_spacing"
    android:layout_marginStart="@dimen/agenda_spacing"
    android:layout_marginEnd="@dimen/agenda_spacing"
    app:cardBackgroundColor="?attr/backgroundPrimaryColor"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView android:id="@+id/iv_manga_cover"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:contentDescription="Manga cover"
            android:scaleType="centerCrop"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/agenda_spacing">

            <TextView android:id="@+id/tv_manga_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/textPrimaryColor"
                android:textSize="@dimen/font_size_medium"
                android:textStyle="bold"
                tools:text="Title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView android:id="@+id/tv_volumes_to_read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textPrimaryColor"
                    android:textSize="@dimen/font_size_large"
                    tools:text="Volume ##" />

                <TextView android:id="@+id/tv_volume_remaining_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textSecondaryColor"
                    android:textSize="@dimen/font_size_medium"
                    tools:text=" + ###" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView android:id="@+id/tv_chapters_to_read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textPrimaryColor"
                    android:textSize="@dimen/font_size_large"
                    tools:text="Chapter ##" />

                <TextView android:id="@+id/tv_chapter_remaining_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/textSecondaryColor"
                    android:textSize="@dimen/font_size_medium"
                    tools:text=" + ###" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>